<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootLayout"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.managerlibrary.controllers.RootLayoutController"
            stylesheets="@/Styles.css">

    <left>
        <VBox style="-fx-background-color: #f0f0f0;" prefWidth="150">
            <padding>
                <Insets top="20" left="10" bottom="20" right="10"/>
            </padding>
            <Label text="LOGO AQUI" alignment="CENTER" prefWidth="100" prefHeight="100">
                <VBox.margin>
                    <Insets bottom="20"/>
                </VBox.margin>
                <style>
                    -fx-border-color: gray;
                    -fx-border-width: 1px;
                    -fx-alignment: center;
                </style>
            </Label>
            <Button text="Biblioteca" prefWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Gerenciar Livros" prefWidth="Infinity" styleClass="sidebar-button" onAction="#showBookView"/>
            <Button text="Usuários" prefWidth="Infinity" styleClass="sidebar-button" onAction="#showUserView"/>
            <Button text="Empréstimos" prefWidth="Infinity" styleClass="sidebar-button" onAction="#showLoanView"/>
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20"/>
                </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Admin" style="-fx-font-weight: bold;"/>
                    <Label text="admin@biblioteca.com" style="-fx-font-size: 0.8em;"/>
                    <padding>
                        <Insets bottom="10"/>
                    </padding>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <top>
        <HBox style="-fx-background-color: #ddd; -fx-padding: 10;">
            <TextField promptText="Buscar por título, autor ou ISBN..." HBox.hgrow="ALWAYS"/>
            <Button text="+ Adicionar Livro" styleClass="primary-button"/>
        </HBox>
    </top>

    <center>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.managerlibrary.controllers.AddUserController"
      spacing="20.0"
      stylesheets="@/Styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Adicionar Novo Usuário" styleClass="label-title"/>

    <VBox spacing="10.0">
        <Label text="Nome:" styleClass="label"/>
        <TextField fx:id="nameTextField" styleClass="text-field rounded-corners"/>

        <Label text="CPF:" styleClass="label"/>
        <TextField fx:id="cpfTextField" promptText="000.000.000-00" styleClass="text-field rounded-corners"/>

        <Label text="Telefone:" styleClass="label"/>
        <TextField fx:id="phoneTextField" promptText="(00) 00000-0000" styleClass="text-field rounded-corners"/>

        <Label text="Email:" styleClass="label"/>
        <TextField fx:id="emailTextField" styleClass="text-field rounded-corners"/>

        <Label text="Endereço:" styleClass="label"/>
        <TextField fx:id="addressTextField" styleClass="text-field rounded-corners"/>
    </VBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Button fx:id="saveButton" text="Salvar" onAction="#saveUser" styleClass="primary-button rounded-corners shadow-effect"/>
        <Button text="Cancelar" onAction="#cancelAddUserView" styleClass="secondary-button rounded-corners shadow-effect"/>
    </HBox>

</VBox>